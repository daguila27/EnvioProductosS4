<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.address_definition.AddressFormFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp">

            <TextView
                android:id="@+id/form_address_origin_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dirección de origen:"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/form_address_origin_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginVertical="12dp"
                android:background="#CFCACA"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="1dp">

                <TextView
                    android:id="@+id/form_address_origin_placeholder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:paddingTop="12dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="12dp"
                    android:text="Selecciona dirección de origen..." />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp">

            <TextView
                android:id="@+id/form_address_destiny_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dirección de destino:"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/form_address_destiny_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginVertical="12dp"
                android:background="#CFCACA"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="1dp">

                <TextView
                    android:id="@+id/form_address_destiny_placeholder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:paddingTop="12dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="12dp"
                    android:text="Selecciona dirección de destino..." />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/form_address_road_information_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detalles del envío:"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/form_address_road_information_distance_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Distancia al destino (km)" />
                <TextView
                    android:id="@+id/form_address_road_information_distance_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="20 kilómetros" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/form_address_road_information_delivery_cost_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Valor del envío" />
                <TextView
                    android:id="@+id/form_address_road_information_delivery_cost_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$1.000 (CLP)" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/form_address_continue_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:text="Continuar" />
</FrameLayout>